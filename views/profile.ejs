<%- include('./includes/head.ejs') %>
</head>
<body>
    <%- include('./includes/navigation.ejs') %>
    <%- include('./includes/messages.ejs') %>
    <div class="container">
    <div class="page-header m-1">
        <h2 style="text-align: center">Hello this is a profile for: <%- locals.username %></h2>
    </div>
    <div class="row justify-content-center">
        <button class="btn btn-dark m-1 dropdown-toggle" type="button" data-toggle="collapse" data-target="#postCollapse" aria-expanded="false" aria-controls="multiCollapseExample2">Create Post </button>
        <!-- <button class="btn btn-primary m-1">Search Posts</button> -->
        <form class="form-inline">
            <input class="form-control mr-sm-2" type="search" placeholder="Search Posts" aria-label="Search">
            <button class="btn btn-outline-dark my-2 my-sm-0" type="submit">Search</button>
        </form>
    </div>   
    <form id="postCollapse" class="form-row m-3 collapse" action="/profile/create-post" method="POST">
       <div class="form-group p-3 border rounded">
           <p>
               <label for="title">Title</label>
               <input class="form-control" name="title" placeholder="Title" required>
           </p>
           <p>
               <label for="comment">Comment</label>
               <div class="row justify-content-center m-1">
                   <textarea class="form-control" name="comment" rows="4" cols="50" required></textarea>
               </div>
           </p>
           <div class="row justify-content-center">
               <button class="btn btn-outline-dark" type="submit">Submit</button>
           </div>
        </div>    
    </form>
    <hr>
    <% if (posts) { %>
    <% posts.forEach(post => { %>
        <div class="card p-3 m-1">
            <h3 class="card-title"><%= post.title %></h3>
            <p class="card-text"><%= post.comment %></p>
            <p><%= post.date.toString().substring(4, 24) %></p>
        </div>

    <% }) %>
    <% } else { %>
        <p>No Posts</p>
    <% } %>
    </div>
</body>
</html>