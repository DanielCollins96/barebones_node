<%- include('./includes/head.ejs') %>
</head>
<body>
    <%- include('./includes/navigation.ejs') %>
    <%- include('./includes/messages.ejs') %>
    <div class="login-container">

        <form class="form-row m-3" action="/login" method="POST">
            <div class="form-group p-3 border rounded">
                <legend>Login</legend>
                <button class="btn btn-ghost">
                    <img src="./images/google.png" alt="Get him to Googs">
                    <a href="/auth/google">Log in with Google</a> 
                </button>
                <small>or</small>

                <!-- <p>
                    <label for="username">Username</label>
                    <input name="username" type="text" placeholder="username" required>
                </p> -->
                <p>
                    <label for="email">Email</label>
                    <input class="form-control" name="email" type="email" placeholder="Email" required>
                </p>
                <p>
                    <label for="password">Password</label>
                    <input class="form-control" name="password" type="password" placeholder="Password" required>
                </p>
                <div class="checkbox-container form-check">
                        <input type="checkbox" id="remember" class="form-check-input">
                        <label class="form-check-label" for="remember">Remember me</label>
        
                        <a href="#">Forgot Password?</a>
                    </div>
                <div class="row justify-content-center">
                    <button class="btn btn-outline-dark" type="submit">Log in</button>
                </div>
                <small>Don't have an account? <a href="/register">Sign up</a></small>
            </div>
        </form>
    </div>
</body>
</html>